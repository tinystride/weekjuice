<div class="posts-listing">
  <ul>
  {{#each post in controller}}
    <li>
      <p><b>Content:</b> {{post.primary_content}}</p>
      {{#if post.sourceNote}}
        <p><b>Note:</b> <i>{{post.sourceNote}}</i></p>
        <a target="_blank" {{bindAttr href="post.sourceUrl"}}>{{post.sourceTitle}}</a>
      {{/if}}
      {{#link-to "post" post}}Permalink{{/link-to}}
    </li>
  {{else}}
    <li>
      <p>ack! no posts.</p>
    </li>
  {{/each}}
  </ul>

  {{outlet}}

</div>
<div>
  <h4>This is the random post:</h4>
  <p>{{randomPost.primary_content}}</p>
</div>